<div class="dashboard-wrapper"></div>
    <input id="drink-search"> <button id="search-button">Search</button>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

</div>

<script src="/javascript/dashboard.js"></script>