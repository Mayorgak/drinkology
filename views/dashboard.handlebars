<link rel="stylesheet" href="stylesheets/{{style}}">

<style>
  .album {
    margin-bottom: 100px;
  }

  #card-container {
    margin-bottom: 100px;
  }

  .card-title {
    text-align: left;
    color: #FFF5EE;
    margin-bottom: 0;
  }

  h5 {
    text-align: left;
  }

  .card-header {
    background-color: rgb(31, 87, 45);
  }
</style>

<main role="main">
  <section class="dashboard-jumbotron text-center">
    <div class="dashboard-container">
      <div class="box">
        <h1 id="cheers">Cheers!</h1>
        <p class="lead-text">"Time to pour yourself a drink"</p>
        <form class="form-inline active-pink-3 active-pink-4" id="drink-form">
          <i class="fas fa-search" aria-hidden="true"></i>
          <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
            aria-label="Search" id="drink-search">
        </form>
      </div>
    </div>
  </section>

<!-- Card section -->
{{#if posts.length}}
<div class="d-flex justify-content-center py-3 bg-light" id="card-container">
  <div class="row row-col-2 w-100 justify-content-center">
    {{#each posts as |post|}}
      {{> post-info post}}
    {{/each}}
  </div>
</div>
{{/if}}

<script src="/javascript/dashboard.js"></script>