<link rel="stylesheet" href="stylesheets/{{style}}">

<main role="main">
  <section class="dashboard-jumbotron text-center">
    <div class="dashboard-container">
      <div class="box">
        <h1 id="cheers">Cheers!</h1>
        <p class="lead-text">"Time to pour yourself a drink"</p>
        <form class="form-inline active-pink-3 active-pink-4" id="drink-form">
          <i class="fas fa-search" aria-hidden="true"></i>
          <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
            aria-label="Search" id="drink-search">
        </form>
      </div>
    </div>
  </section>
<!-- Card section -->
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-col-2">
      {{#if Post.length}}
      {{#each Post}}
      <div class="card">
        {{!-- Card Image --}}
        <div class="col-4 p-0">
          <img src="{{strDrinkThumb}}/preview" class="card-img h-100" alt="...">
        </div>
        <div class="col-8">
          {{!-- Card Header --}}
          <div class="card-header text-left">
            <h5 class="card-title">{{strDrink}}</h5>
            <p>Review Created By</p>
            <a href="/review?drinkid={{idDrink}}" class="btn btn-success" id="review-button">Write Review</a>
          </div>
        </div>
      {{/each}}
      {{/if}}
    </div>
  </div>
</div>


<script src="/javascript/dashboard.js"></script>

